{
  "name": "sliderool",
  "author": "August Black",
  "version": "0.0.27",
  "description": "react/tailwind/framer motion UI lib",
  "license": "GPLv3",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/augustblack/sliderool.git"
  },
  "homepage": "https://github.com/augustblack/sliderool#README",
  "files": [
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "tsup": {
    "entry": [
      "components/index.tsx"
    ],
    "format": "cjs,esm",
    "splitting": false,
    "sourcemap": true,
    "dts": true,
    "clean": true,
    "minify": false
  },
  "scripts": {
    "dev": "next dev",
    "lint": "next lint",
    "build-tailwind": "NODE_ENV=production npx tailwindcss -o ./lib/sliderool.css --minify",
    "blah": "rm -rf ./lib && npm run build-tailwind && tsc -p tsconfig_pkg.json",
    "tsup": "tsup --format cjs,esm --dts --clean --sourcemap",
    "prepublish": "rm -rf ./dist && npm run build-tailwind && npm run tsup",
    "build": "next build",
    "export": "next build && next export",
    "start": "next start"
  },
  "peerDependencies": {
    "framer-motion": "file:../tmp/motion/packages/framer-motion/",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.2",
    "tailwindcss-theme-swapper": "^0.6.5"
  },
  "devDependencies": {
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/modifiers": "^6.0.1",
    "@dnd-kit/sortable": "^7.0.2",
    "@types/node": "^18.7.18",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^17.0.14",
    "autoprefixer": "^10.4.2",
    "eslint": "8.26.0",
    "eslint-config-next": "^13.0.2",
    "next": "^13.0.2",
    "postcss": "^8.4.5",
    "tsup": "^5.12.1",
    "typescript": "^4.5.4"
  }
}
