{
  "name": "sliderool",
  "author": "August Black",
  "version": "0.0.27",
  "description": "react/tailwind/framer motion UI lib",
  "license": "GPLv3",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/augustblack/sliderool.git"
  },
  "homepage": "https://github.com/augustblack/sliderool#README",
  "files": [
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "tsup": {
    "entry": [
      "components/index.tsx"
    ],
    "format": "cjs,esm",
    "splitting": false,
    "sourcemap": true,
    "dts": true,
    "clean": true,
    "minify": false
  },
  "scripts": {
    "dev": "next dev",
    "build-tailwind": "NODE_ENV=production npx tailwindcss -o ./lib/sliderool.css --minify",
    "blah": "rm -rf ./lib && npm run build-tailwind && tsc -p tsconfig_pkg.json",
    "tsup": "tsup --format cjs,esm --dts --clean --sourcemap",
    "prepublish": "rm -rf ./dist && npm run build-tailwind && npm run tsup",
    "build": "next build",
    "export": "next build && next export",
    "start": "next start"
  },
  "peerDependencies": {
    "framer-motion": "^7.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.1.8",
    "tailwindcss-theme-swapper": "^0.6.2"
  },
  "devDependencies": {
    "@types/node": "^18.7.18",
    "@types/react": "^18.0.20",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "autoprefixer": "^10.4.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.26.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-standard": "^5.0.0",
    "next": "^12.3.1",
    "postcss": "^8.4.5",
    "tsup": "^5.12.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@types/react-dom": "^17.0.14"
  }
}
