{
  "name": "sliderool",
  "author": "August Black",
  "version": "0.0.27",
  "description": "react/tailwind/framer motion UI lib",
  "license": "GPLv3",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/augustblack/sliderool.git"
  },
  "homepage": "https://github.com/augustblack/sliderool#README",
  "files": [
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "tsup": {
    "entry": [
      "components/index.tsx"
    ],
    "format": "cjs,esm",
    "splitting": true,
    "sourcemap": true,
    "dts": true,
    "clean": true,
    "minify": false
  },
  "scripts": {
    "dev": "next dev",
    "lint": "next lint",
    "build-tailwind": "NODE_ENV=production npx tailwindcss -o ./lib/sliderool.css --minify",
    "blah": "rm -rf ./lib && npm run build-tailwind && tsc -p tsconfig_pkg.json",
    "tsup": "tsup --format cjs,esm --dts --clean --sourcemap",
    "prepublish": "rm -rf ./dist && npm run build-tailwind && npm run tsup",
    "build": "next build",
    "export": "next build && next export",
    "start": "next start"
  },
  "peerDependencies": {
    "framer-motion": "10.12.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-theme-swapper": "^0.10.0"
  },
  "devDependencies": {
    "@swc/core": "^1.3.101",
    "@types/node": "^20.10.05",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "eslint": "8.56.0",
    "eslint-config-next": "^14.0.4",
    "next": "^14.0.4",
    "postcss": "^8.4.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
