{
  "compilerOptions": {
    "target": "es2020",
    "outDir": "./lib",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": [
    "components"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "pages",
    "**/__tests__/*"
  ]
}
